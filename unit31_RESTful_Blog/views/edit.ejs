<% include partials/header %>
<% include partials/navbar %>


<div class='ui main text container segment'>
        <div class='ui huge header'>Edit: <%= post.title %></div>
        <form class='ui form' action='/posts/<%= post._id %>?_method=PUT' method='POST'>
            <div class='field'>
                <label>Title</label>
                <input type='text' name='blog[title]' value='<%= post.title %>'>
            </div>
            <div class='field'>
                <label>Image</label>
                <input type='text' name='blog[image]' value='<%= post.image %>'>
            </div>
            <div class='field'>
                <label>Content</label>
                <textarea name='blog[content]' value='<%- post.content %>'></textarea>
            </div>

            <input class='ui button' type='submit'>
        </form>
    </div>







<% include partials/footer %>